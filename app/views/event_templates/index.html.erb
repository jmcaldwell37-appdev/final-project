      <tr>
        <th>
Drip will save for you whenever:
        </th>
        
        <th>
         Popularity:
        </th>

        <th>
        </th>
      </tr>

      <% @events.each do |event| %>
      <tr>
       
        <td>
           <%= event.name %>
        </td>

        <td>
          <span class="badge badge-primary badge-pill"><%=CustomizedPreference.where(event_id: event.id).count%></span>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>
