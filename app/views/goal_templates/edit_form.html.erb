<h1>
  Edit: <%= @goal.name %>
</h1>

<hr>



<form action="/update_goal/<%= @goal.id %>" method="post">

  <div class="form-group">
    
    <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= @goal.user_id %>">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @goal.description %>">
  </div>
  

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @goal.name %>">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="d_or_s">
    <input id="d_or_s" class="form-check-input" name="d_or_s" type="checkbox" value="1" <%= "checked" if @goal.d_or_s %>>
    <label for="d_or_s" class="form-check-label">
    </label>
  </div>

  <div class="form-group">
    <label for="goal_amount">
      Goal amount
    </label>

    <input type="text" id="goal_amount" name="goal_amount" class="form-control" value="<%= @goal.goal_amount %>">
  </div>

  <div class="form-group">
    <label for="current_amount">
      Current amount
    </label>

    <input type="text" id="current_amount" name="current_amount" class="form-control" value="<%= @goal.current_amount %>">
  </div>

  <div class="form-group">
    <!--<label for="deadline">-->
    <!--  Deadline-->
    <!--</label>-->

    <input type="hidden" id="deadline" name="deadline" class="form-control" value="<%= @goal.deadline %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update goal
  </button>
</form>

<hr>

<form action="/create_customized_preference" method="post" class="table-bordered">
  <h3>Quick-add a savings preference</h3>
  <div class="form-group">
    <label for="event_id">
      Event
    </label>
    <%= select_tag("event_id", options_from_collection_for_select(Event.all, :id, :name), :class => "form-control") %>
  </div>

  <div class="form-group">
    <input type="hidden" id="user_id" name="user_id" value="<%=current_user.id%>" class="form-control">
  </div>

  <div class="form-group">
    <input type="hidden" id="goal_id" name="goal_id" value="<%=@goal.id%>" class="form-control">
  </div>

  <div class="form-group">
    <label for="transaction_amount">
      Transaction amount
    </label>
    <%= select_tag("transaction_amount", options_for_select([['$0.25', 0.25], ['$0.50', 0.5], ['$1', 1], ['$2', 2], ['$5', 5], ['$10', 10]]), :class => "form-control") %>
  </div>
  
  <button class="btn btn-block btn-outline-secondary">
    Add preference
  </button>
</form>

<a href="/goals">
  Go back
</a>
